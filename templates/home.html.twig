{% extends "base.html.twig" %}

{% block title %}
    Accueil
{% endblock %}

{% block body %}
    <h1>Nos produits phares</h1>
    <div class="row">
        {% for p in products %}
            <div class="col">
                <div class="card">
                    <img src={{ p.mainPicture }} class="img-fluid" alt="image produit">
                    <div class="card-body">
                        <h4 class="card-title">{{ p.name }} ({{ p.price / 100 }}&euro;)</h4>
                        <span class="badge badge-info">
                            Catégorie : {{ p.category.name }}
                        </span>
                        <p class="card-text">{{ p.shortDescription }}</p>
                        <a href="{{ path('product_show', {'category_slug':p.category.slug, 'product_slug':p.slug})  }}" class="btn btn-primary btn-sm">Détails</a>
                        <a href="#" class="btn btn-success btn-sm">Ajouter</a>
                    </div>
                </div> {# end of 'card' #}
            </div> {# end of 'col' #}
        {% endfor %}
    </div> {# end of 'row' #}
    <hr>
